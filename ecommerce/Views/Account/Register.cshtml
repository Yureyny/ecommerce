@model ecommerce.Models.RegisterViewModel
@{
    ViewBag.Title = "Registro de Usuario";
}

    <div class="page-header header-filter" filter-color="purple" style="background-image: url('/Content/assets/img/bg7.jpg'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="row">
                <div class="col-md-10 ml-auto mr-auto">
                    <div class="card card-signup">
                        <h2 class="card-title text-center"><i class="fa fa-user-plus"></i>  @ViewBag.Title</h2>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-5 ml-auto">
                                    <div class="info info-horizontal">
                                        <div class="icon icon-rose">
                                            <i class="material-icons">timeline</i>
                                        </div>
                                        <div class="description">
                                            <h4 class="info-title">Compra Fácil y rápida</h4>
                                            <p class="description">
                                              Fashop Online posee una plataforma agradable para los usuarios en la que menos de 5 minutos podras realizar una compra.
                                            </p>
                                        </div>
                                    </div>
                                    <div class="info info-horizontal">
                                        <div class="icon icon-primary">
                                            <i class="material-icons">code</i>
                                        </div>
                                        <div class="description">
                                            <h4 class="info-title">Productos de Marca</h4>
                                            <p class="description">
                                                Fashop Online, posee productos de alta calidad de las marcas de ropa reconocidos en el mundo entero.
                                            </p>
                                        </div>
                                    </div>
                                    <div class="info info-horizontal">
                                        <div class="icon icon-info">
                                            <i class="material-icons">group</i>
                                        </div>
                                        <div class="description">
                                            <h4 class="info-title">Vendedores Internacionales</h4>
                                            <p class="description">
                                               Fashop Online cuenta con miles de vendores certificados de diversos paises.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5 mr-auto">
                                    <div class="social text-center">
                                        <button class="btn btn-just-icon btn-round btn-twitter">
                                            <i class="fa fa-twitter"></i>
                                        </button>
                                        <button class="btn btn-just-icon btn-round btn-dribbble">
                                            <i class="fa fa-dribbble"></i>
                                        </button>
                                        <button class="btn btn-just-icon btn-round btn-facebook">
                                            <i class="fa fa-facebook"> </i>
                                        </button>
                                        <h4> Digitar Datos </h4>
                                    </div>
                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="material-icons">mail</i>
                                                    </span>
                                                </div>
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo" })

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="material-icons">lock_outline</i>
                                                    </span>
                                                </div>
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Clave" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="material-icons">lock_outline</i>
                                                    </span>
                                                </div>
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar clave" })
                                            </div>
                                        </div>
                                        <br />
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="checkbox" value="" checked>
                                                <span class="form-check-sign">
                                                    <span class="check"></span>
                                                </span>
                                                Yo acepto los
                                                <a href="#something">terminos y condiciones</a>.
                                            </label>
                                        </div>
                                        <div class="text-center">
                                            @Html.ValidationSummary("", new { @class = "text-danger" })
                                         </div>
                                        <div class="text-center">
                                                <input type="submit" class="btn btn-primary btn-block btn-round" value="Register" />
                                        </div>
                                        }
                                </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


   
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
