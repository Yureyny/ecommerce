@model ecommerce.Models.ListaDeseos

@{
    ViewBag.Title = "Delete";
}
<div class="page-header header-filter" data-parallax="true" filter-color="rose" style="background-image: url('/Content/assets/img/bg6.jpg');">
    <div class="container">

        <div class="row title-row">
            <div class="col-md-4 ml-auto">
                <a href="@Url.Action("Index", "ListaDeseos")" class="btn btn-white float-right"><i class="material-icons">remove_red_eye</i> Ver lista de deseos</a>
            </div>
        </div>
    </div>
</div>
<div class="section section-gray">
    <div class="container">
        <div class="main main-raised main-product">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <h3>Estas seguro de que deseas eliminar este producto de tu lista?</h3>
                    <hr />
                    
                    <div>
                      
                       
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Producto.nombre)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Producto.nombre)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Producto.Marca.nombre)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Producto.Marca.nombre)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                @Html.ActionLink("Volver a la lista", "Index")
                            </div>
                        }
                    </div>

                </div>

            </div>
        </div>


    </div>
</div>

